{
    "name": "bun-react-template",
    "private": true,
    "version": "0.0.0",
    "type": "module",
    "scripts": {
        "server-start": "cd ../server && spacetime start --data-dir data",
        "server-publish": "spacetime publish --project-path ../server chat-server",
        "generate-bindings": "spacetime generate --lang typescript --out-dir src/module_bindings --project-path ../server",
        "generate-hooks": "bun generate-hooks.js",
        "clear-db": "concurrently \"bun run server-start\" \"sleep 2 && cd ../server && spacetime delete chat-server && cd ../client\"",
        "dev": "bunx --bun vite",
        "build": "bunx --bun vite build",
        "lint": "eslint . --ext ts,tsx --report-unused-disable-directives --max-warnings 0",
        "preview": "bunx --bun vite preview",
        "dev-all": "concurrently \"bun run server-start\" \"sleep 2 && bun run server-publish && bun run generate-bindings && bun run generate-hooks && bun run dev\""
    },
    "dependencies": {
        "@clockworklabs/spacetimedb-sdk": "^1.3.0",
        "@headlessui/react": "^1.7.19",
        "dotenv": "^16.6.1",
        "react": "^18.3.1",
        "react-dom": "^18.3.1",
        "react-window": "^1.8.11"
    },
    "devDependencies": {
        "@types/node": "^20.19.9",
        "@types/react": "^18.3.23",
        "@types/react-dom": "^18.3.7",
        "@types/react-window": "^1.8.8",
        "@typescript-eslint/eslint-plugin": "^6.21.0",
        "@typescript-eslint/parser": "^6.21.0",
        "@vitejs/plugin-react": "^4.7.0",
        "@vitejs/plugin-react-swc": "^3.11.0",
        "autoprefixer": "^10.4.21",
        "concurrently": "^9.2.0",
        "eslint": "^8.57.1",
        "eslint-config-prettier": "^9.1.2",
        "eslint-plugin-react": "^7.37.5",
        "eslint-plugin-react-hooks": "^4.6.2",
        "eslint-plugin-react-refresh": "^0.4.20",
        "eslint-plugin-tailwindcss": "^3.18.2",
        "postcss": "^8.5.6",
        "prettier": "^3.6.2",
        "tailwindcss": "^3.4.17",
        "typescript": "^5.9.2",
        "vite": "^4.5.14"
    }
}
